{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "build/",
      "rootDir": ".",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "typeRoots": ["node_modules/@types"]
  },
  "filesGlob": [
      "*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
  "compileOnSave": false
}