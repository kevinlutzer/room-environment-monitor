{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "types": [],
    "outDir": "dist",
    "lib": ["es2018", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules/*",
  ]
}
